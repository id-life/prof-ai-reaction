{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "18.2.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "outDir": "./dist",
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "isolatedModules": true,
    "incremental": true,
    "verbatimModuleSyntax": true,
    // use typescript file directly, 
    // generated d.ts have some issue with zod type infer
    // https://github.com/colinhacks/zod/issues/3710#issuecomment-2381093862 
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}