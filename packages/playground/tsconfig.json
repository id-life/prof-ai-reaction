{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "24.0.0",
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "outDir": "./dist",
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "incremental": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
